<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="256dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/dialog_sheet_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/navigo_medium"
                android:gravity="center"
                android:text="Verify"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:padding="4dp"
                android:src="@drawable/ic_cancel" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/navigo_medium"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:text="Enter the code we've sent to your email ID"
                android:textColor="@color/black"
                android:textSize="12dp" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/roundborder"
                android:orientation="horizontal">

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/color_grey_line" />

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:imeOptions="actionDone"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:padding="5dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/color_grey_line" />

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_3"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/color_grey_line" />

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_4"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/color_grey_line" />

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_5"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/color_grey_line" />

                <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:id="@+id/otp_edit_6"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t_10"
                android:layout_marginHorizontal="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/navigo_medium"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="Haven't received an OTP?"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/navigo_medium"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text=" Send again"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/app_btn"
                android:fontFamily="@font/navigo_medium"
                android:gravity="center"
                android:text="Verify"
                android:layout_marginBottom="@dimen/t_30"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>