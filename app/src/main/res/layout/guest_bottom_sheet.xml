<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="256dp"
        style="@style/AppBottomSheetDialogTheme">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/dialog_sheet_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/navigo_medium"
                android:gravity="center"
                android:text="Who's coming?"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:padding="4dp"
                android:src="@drawable/ic_cancel" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="@dimen/t_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_medium"
                    android:text="Guests"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/etGuest"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/et_bg_one"
                    android:fontFamily="@font/navigo_light"
                    android:gravity="center"
                    android:hint="0"
                    android:digits="1234567890"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/t_20"
                android:background="@color/color_grey_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="200dp"/>




            <TextView
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/app_btn"
                android:fontFamily="@font/navigo_medium"
                android:gravity="center"
                android:text="Proceed"
                android:layout_marginBottom="@dimen/t_30"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>