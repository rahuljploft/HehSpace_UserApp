<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".components.rating.RatingReviewActivity">
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/t_30"
                android:layout_height="@dimen/t_30"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/t_10"
                android:padding="5dp"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/navigo_medium"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/t_20"
                android:gravity="center"
                android:text="Rating &amp; Reviews"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="@dimen/t_30"
                android:layout_height="@dimen/t_25"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginRight="@dimen/t_10"
                android:src="@drawable/ic_filter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t_10"
            android:layout_marginBottom="@dimen/t_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTotalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_medium"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="@dimen/t_10"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_light"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_gravity="center"
                    android:text="Overall Rating"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="12dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTotalReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_medium"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_light"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_gravity="center"
                    android:text="Total Reviews"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="12dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvFiveStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_medium"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="0 %"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/navigo_light"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_gravity="center"
                    android:text="5 star Reviews"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/t_10"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/t_15"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNoReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/t_10"
            android:visibility="gone"
            android:layout_margin="@dimen/t_20"
            app:cardElevation="@dimen/t_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/t_10"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="@dimen/t_10"
                    android:layout_gravity="center"
                    android:rotation="180"
                    android:src="@drawable/noreviews" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/navigo_regular"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/t_20"
                    android:gravity="center"
                    android:text="No Reviews Found!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_15" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>
