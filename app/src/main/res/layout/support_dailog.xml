<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/t_30"
            android:layout_centerInParent="true"
            app:cardElevation="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="UselessParent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t_20">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/navigo_medium"
                        android:text="Raise a Inquiry"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="@dimen/t_25"
                        android:layout_height="@dimen/t_25"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sideclose" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/et_bg">

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/navigo_light"
                        android:hint="Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="25dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/et_bg">

                    <EditText
                        android:id="@+id/etMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/navigo_light"
                        android:hint="Mobile Number"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/et_bg">

                    <EditText
                        android:id="@+id/etPropertyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/navigo_light"
                        android:hint="Property Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="25dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/et_bg">

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/navigo_light"
                        android:hint="Address"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/layoutHire"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/t_20"
                    android:layout_marginHorizontal="@dimen/t_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/app_btn">

                    <LinearLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/t_30"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="@dimen/t_15"
                            android:layout_height="@dimen/t_15"
                            android:layout_gravity="center"
                            app:tint="@color/white"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/t_10"
                            android:fontFamily="@font/navigo_regular"
                            android:gravity="center"
                            android:text="support@hehspace.com"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutCall"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/t_20"
                    android:layout_marginHorizontal="@dimen/t_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/app_btn">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="@dimen/t_30">

                        <ImageView
                            android:layout_width="@dimen/t_15"
                            android:layout_height="@dimen/t_15"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_call"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/t_10"
                            android:fontFamily="@font/navigo_regular"
                            android:gravity="center"
                            android:text="7976232985"
                            android:textColor="@color/black"
                            android:textSize="13dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutWeb"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/t_20"
                    android:layout_marginHorizontal="@dimen/t_20"
                    android:layout_marginBottom="@dimen/t_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/app_btn">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/t_30"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="@dimen/t_15"
                            android:layout_height="@dimen/t_15"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_web"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/t_10"
                            android:fontFamily="@font/navigo_regular"
                            android:gravity="center"
                            android:text="www.hehspace.com"
                            android:textColor="@color/black"
                            android:textSize="13dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>